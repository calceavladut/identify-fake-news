root = true

[*]
indent_style = space
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{js,html,json}]
indent_style = space
indent_size = 2

[*.sh]
indent_style = tab
indent_size = 4

[{docker-compose{,.*}.{yaml,yml,rpi}}]
indent_style = space
indent_size = 2

[Dockerfile]
indent_style = tab
indent_size = 4

[Makefile]
indent_style = tab
