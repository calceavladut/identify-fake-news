{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@300;400;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link rel="stylesheet" href="{{ asset('css/trusted_sites.css') }}">
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
    <script src="{{ asset('js/extention/choices.js') }}"></script>
{% endblock %}

{% block body %}
    <body>
    <div id="top-header">
        <img src="{{ asset('images/icon48.png') }}" alt="logo"/><h2>Round Earth Society</h2>
        <h3>the truth, the whole truth and nothing but<br/><span>the truth</span></h3>
    </div>

    <div class="wrapper">
        <div class="table">
            <div class="row green">
                <div class="cell">
                    Domain
                </div>
                <div class="cell">
                    Real hits
                </div>
                <div class="cell">
                    Fake hits
                </div>
                <div class="cell">
                    Total hits
                </div>
                <div class="cell">
                    Percentage
                </div>
            </div>

            {% for domain in trusted_sites %}
                <div class="row">
                    <div class="cell" data-title="Domain">
                        {{ domain.domain }}
                    </div>
                    <div class="cell" data-title="Real hits">
                        {{ domain.realHits }}
                    </div>
                    <div class="cell" data-title="Fake hits">
                        {{ domain.fakeHits }}
                    </div>
                    <div class="cell" data-title="Total hits">
                        {{ domain.totalHits }}
                    </div>
                    <div class="cell" data-title="Percentage">
                        {{ domain.percentage | round }}% <b style="color: #C9DE3C; padding-left: 6px">  real</b>
                    </div>
                </div>
            {% endfor %}
        </div>
        <a href="/">
            <button value="Homepage" class="btn submit">Go back to homepage!</button>
        </a>
    </div>
    </body>
{% endblock %}
